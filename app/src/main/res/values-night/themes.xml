<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RecycloMate" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/greenDark</item>
    </style>

    //Login signup input outer box style
    <style name="LoginTextInputOuterFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <!-- Text color-->
    <style name="txtcolo">
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- Button style dark mode -->
    <style name="BUTTON">
        <item name="android:background">@drawable/rounded_button_bg_dark</item>
    </style>
    <!-- text style dark mode -->
    <style name="TEXT">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>